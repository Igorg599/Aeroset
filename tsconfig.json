{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "ES2019",
    "module": "esnext",
    "lib": [
      "es2015",
      "dom",
      "es2015.promise"

    ],
    "jsx": "preserve",
    "sourceMap": true,
    "noFallthroughCasesInSwitch" : true,
    "strict": true,
    "moduleResolution": "node",
    "types": [],
    "esModuleInterop": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
